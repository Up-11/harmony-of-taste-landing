---
import Logo from '../assets/images/logo.png'
---

<header
	id='site-header'
	class='fixed glass-card inset-x-0 top-0 z-50 w-full flex p-2 items-center justify-between backdrop-blur-lg transition-all duration-300 hover:shadow-xl'
>
	<div class='hover:scale-105 transition-transform duration-300'>
		<a href='#home'>
			<img
				src={Logo.src}
				alt='Logo'
				width='200'
				height='200'
				class='drop-shadow-lg size-15 transition-all duration-300'
				id='site-logo'
			/>
		</a>
	</div>

	<nav class='hidden md:flex items-center gap-8'>
		<a
			href='#menu'
			class="text-white hover:text-amber-300 transition-colors duration-200 font-medium relative after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-amber-300 after:transition-all after:duration-300 hover:after:w-full"
		>
			Меню
		</a>
		<a
			href='#about'
			class="text-white hover:text-amber-300 transition-colors duration-200 font-medium relative after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-amber-300 after:transition-all after:duration-300 hover:after:w-full"
		>
			О нас
		</a>
		<a
			href='#contacts'
			class="text-amber-100 hover:text-amber-300 transition-colors duration-200 font-medium relative after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-amber-300 after:transition-all after:duration-300 hover:after:w-full"
		>
			Контакты
		</a>
	</nav>

	<a
		href='https://up-11.github.io/LandingGolana/'
		target='_blank'
		rel='noopener noreferrer'
		class='relative overflow-hidden group px-6 py-2 rounded-full bg-gradient-to-r from-amber-500 to-amber-600 text-white font-semibold shadow-lg hover:shadow-amber-500/30 transition-all duration-300 hover:scale-105'
	>
		<span class='relative z-10'>Наш поставщик</span>
		<span
			class='absolute inset-0 bg-gradient-to-r from-amber-600 to-amber-700 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-full'
		></span>
		<span
			class='absolute top-0 left-0 w-10 h-full bg-white/30 -skew-x-12 transform translate-x-[-120%] group-hover:translate-x-[300%] transition-transform duration-700'
		></span>
	</a>
</header>
